<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_285">

    <RelativeLayout
        android:id="@+id/rlyt_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlyt_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45">

            <com.zego.zegolivedemo.ui.widget.CirImageView
                android:id="@+id/civ_avatar"
                android:layout_width="@dimen/dimen_35"
                android:layout_height="@dimen/dimen_35"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_8"
                android:src="@mipmap/ic_avatar_default"/>

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/civ_avatar"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_toRightOf="@id/civ_avatar"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_4"
                tools:text="user313"/>

            <TextView
                android:id="@+id/tv_publish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/civ_avatar"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_toRightOf="@id/civ_avatar"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_2"
                tools:text="发布于18分钟前"/>

            <TextView
                android:id="@+id/tv_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_30"
                android:text="+  关注"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/text_size_4"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlyt_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30"
            android:layout_alignParentBottom="true">

            <View style="@style/HorizontalDivider"/>

            <TextView
                android:id="@+id/tv_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_20"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15"
                android:text="举报"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_4"/>

            <View
                android:id="@+id/view_vertical_divider"
                style="@style/VerticalDivider"
                android:layout_marginBottom="@dimen/dimen_4"
                android:layout_marginTop="@dimen/dimen_4"
                android:layout_toLeftOf="@id/tv_report"/>


            <TextView
                android:id="@+id/tv_number_of_audiance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/view_vertical_divider"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15"
                android:text="观看 50"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_3"/>

            <TextView
                android:id="@+id/tv_number_of_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_number_of_audiance"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15"
                android:text="点赞 30"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_3"/>


        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_screenshot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/rlyt_bottom"
            android:layout_below="@id/rlyt_header"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>